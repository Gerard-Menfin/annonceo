<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Annonceo!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags("app") }}
        {% endblock %}
    </head>
    <body>
        <section class="">
            <div class="container">
                {% block nav %}
                    {% include "menu/visiteur.html.twig" %}
                {% endblock %}

                {# MESSAGES #}
                {% for type, messages in app.flashes %}
                    <div class="has-background-{{ type }}">
                        {% for message in messages %}
                            {{ message }}
                        {% endfor %}
                    </div>
                {% endfor %}
                
                {% block body %}{% endblock %}

            </div>
        </section>
        {% block javascripts %}
            {{ encore_entry_script_tags("app") }}
        {% endblock %}

  </body>
</html>